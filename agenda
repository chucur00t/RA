    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- SIMULASI DATA ---
            let allAgendaData = [
                {
                    id: '1',
                    title: 'Rapat Internal Bidang Aptika',
                    start: '2025-07-28T10:00:00',
                    end: '2025-07-28T12:00:00',
                    extendedProps: {
                        jenisAgenda: 'Internal',
                        tempat: 'Ruang Rapat Aptika',
                        status: 'Terjadwal',
                        createdBy: 'Admin Bidang Aptika',
                        publishWebsite: true,
                        asalSurat: '', pakaian: '', disposisi: '', petugas: ''
                    }
                },
                {
                    id: '2',
                    title: 'Undangan Workshop Smart City',
                    start: '2025-07-30T09:00:00',
                    end: '2025-07-31T17:00:00',
                    extendedProps: {
                        jenisAgenda: 'Eksternal',
                        asalSurat: 'Kementerian Kominfo',
                        tempat: 'Hotel Aston, Pontianak',
                        pakaian: 'Batik',
                        disposisi: 'Kadis harap hadir, Kabid Aptika mendampingi.',
                        petugas: 'Kepala Dinas, Kabid Aptika',
                        status: 'Terjadwal',
                        createdBy: 'Admin Dinas',
                        publishWebsite: false
                    }
                },
                {
                    id: '3',
                    title: 'Apel Pagi Gabungan',
                    start: '2025-08-04T07:30:00',
                    end: '2025-08-04T08:30:00',
                    extendedProps: {
                        jenisAgenda: 'Internal',
                        tempat: 'Halaman Kantor',
                        status: 'Terjadwal',
                        createdBy: 'Admin Sekretariat',
                        publishWebsite: false,
                        asalSurat: '', pakaian: '', disposisi: '', petugas: ''
                    }
                }
            ];
            
            // Tetapkan warna saat pemuatan awal
            allAgendaData.forEach(event => {
                const colors = getColorForAdmin(event.extendedProps.createdBy, event.extendedProps.status);
                event.backgroundColor = colors.backgroundColor;
                event.borderColor = colors.borderColor;
            });


            // --- SELEKTOR ELEMEN UI ---
            const calendarEl = document.getElementById('calendar');
            const agendaModal = document.getElementById('agendaModal');
            const detailModal = document.getElementById('detailModal');
            const confirmModal = document.getElementById('confirmModal');
            const addAgendaBtn = document.getElementById('addAgendaBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const closeDetailBtn = document.getElementById('closeDetailBtn');
            const agendaForm = document.getElementById('agendaForm');
            const modalTitle = document.getElementById('modalTitle');
            const adminFilter = document.getElementById('adminFilter');
            const jenisAgendaSelect = document.getElementById('jenisAgenda');
            const createdBySelect = document.getElementById('createdBy');
            const eksternalFieldsContainer = document.getElementById('eksternalFields');
            const internalFieldsContainer = document.getElementById('internalFields');

            // --- INISIALISASI FULLCALENDAR ---
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'id',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,listWeek'
                },
                buttonText: {
                    today: 'hari ini',
                    month: 'bulanan',
                    week: 'mingguan',
                    list: 'daftar'
                },
                events: allAgendaData,
                noEventsText: 'Tidak ada agenda untuk ditampilkan',
                dayMaxEvents: 2,
                eventClick: function(info) {
                    showDetailModal(info.event);
                },
                dateClick: function(info) {
                    openAddModal(info.dateStr);
                },
                eventContent: function(arg) {
                    let publishIcon = arg.event.extendedProps.publishWebsite ? `<i data-lucide="globe" class="w-3 h-3 ml-1 text-blue-600"></i>` : '';
                    let html = `<div class="fc-event-main-frame flex items-center"><div class="fc-event-time">${arg.timeText}</div><div class="fc-event-title-container"><div class="fc-event-title fc-sticky">${arg.event.title}</div></div>${publishIcon}</div>`;
                    return { html: html };
                },
                eventDidMount: function(info) {
                    lucide.createIcons();
                }
            });
            calendar.render();
            lucide.createIcons();

            // --- FUNGSI PENGELOLAAN FORM DINAMIS ---
            const adminOptions = {
                'Eksternal': ['Admin Dinas'],
                'Internal': ['Admin Sekretariat', 'Admin Bidang Aptika', 'Admin Bidang Santis', 'Admin Bidang IP', 'Admin Bidang KP']
            };

            function updateFormBasedOnJenisAgenda() {
                const selectedJenis = jenisAgendaSelect.value;
                
                if (selectedJenis === 'Eksternal') {
                    eksternalFieldsContainer.style.display = 'block';
                    internalFieldsContainer.style.display = 'none';
                } else {
                    eksternalFieldsContainer.style.display = 'none';
                    internalFieldsContainer.style.display = 'block';
                }

                createdBySelect.innerHTML = '';
                adminOptions[selectedJenis].forEach(optionText => {
                    const option = document.createElement('option');
                    option.value = optionText;
                    option.textContent = optionText;
                    createdBySelect.appendChild(option);
                });
            }

            // --- FUNGSI MODAL ---
            function openAddModal(date = null) {
                agendaForm.reset();
                document.getElementById('eventId').value = '';
                modalTitle.innerText = 'Tambah Agenda Baru';
                jenisAgendaSelect.value = 'Eksternal';
                updateFormBasedOnJenisAgenda();
                if (date) {
                    document.getElementById('waktuMulai').value = `${date}T09:00`;
                    document.getElementById('waktuSelesai').value = `${date}T10:00`;
                }
                agendaModal.classList.remove('hidden');
            }

            function closeModal() {
                agendaModal.classList.add('hidden');
            }
            
            function showDetailModal(event) {
                const props = event.extendedProps;
                document.getElementById('detailTitle').innerText = event.title;
                
                const createdByEl = document.getElementById('detailCreatedBy');
                createdByEl.innerHTML = `Diinput oleh <span class="font-semibold" style="color:${event.backgroundColor};">${props.createdBy}</span>`;


                let detailHtml = `
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-start gap-3">
                            <i data-lucide="calendar" class="w-5 h-5 text-slate-500 mt-1"></i>
                            <div>
                                <h4 class="font-semibold text-slate-800">Waktu Pelaksanaan</h4>
                                <p class="text-slate-600">${formatDateRange(event.start, event.end)}</p>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <i data-lucide="map-pin" class="w-5 h-5 text-slate-500 mt-1"></i>
                            <div>
                                <h4 class="font-semibold text-slate-800">Tempat</h4>
                                <p class="text-slate-600">${props.tempat || '-'}</p>
                            </div>
                        </div>
                    </div>
                `;

                if (props.jenisAgenda === 'Eksternal') {
                    detailHtml += `
                        <div class="border-t my-4"></div>
                        <div class="space-y-4">
                            <div class="flex items-start gap-3">
                                <i data-lucide="building" class="w-5 h-5 text-slate-500 mt-1"></i>
                                <div>
                                    <h4 class="font-semibold text-slate-800">Asal Surat / Penyelenggara</h4>
                                    <p class="text-slate-600">${props.asalSurat || '-'}</p>
                                </div>
                            </div>
                             <div class="flex items-start gap-3">
                                <i data-lucide="shirt" class="w-5 h-5 text-slate-500 mt-1"></i>
                                <div>
                                    <h4 class="font-semibold text-slate-800">Pakaian</h4>
                                    <p class="text-slate-600">${props.pakaian || '-'}</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <i data-lucide="file-text" class="w-5 h-5 text-slate-500 mt-1"></i>
                                <div>
                                    <h4 class="font-semibold text-slate-800">Disposisi</h4>
                                    <p class="text-slate-600">${props.disposisi || '-'}</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <i data-lucide="users" class="w-5 h-5 text-slate-500 mt-1"></i>
                                <div>
                                    <h4 class="font-semibold text-slate-800">Petugas yang Ditugaskan</h4>
                                    <p class="text-slate-600">${props.petugas || '-'}</p>
                                </div>
                            </div>
                        </div>
                    `;
                }
                
                const publishText = props.publishWebsite ? 'Ya, dipublikasikan' : 'Tidak dipublikasikan';
                
                if (props.jenisAgenda === 'Internal') {
                    detailHtml += `
                        <div class="border-t my-4"></div>
                        <div class="flex items-start gap-3">
                            <i data-lucide="globe" class="w-5 h-5 text-slate-500 mt-1"></i>
                            <div>
                                <h4 class="font-semibold text-slate-800">Publikasi Website</h4>
                                <p class="flex items-center gap-2 text-slate-600">${publishText}</p>
                            </div>
                        </div>
                    `;
                }


                document.getElementById('detailContent').innerHTML = detailHtml;
                lucide.createIcons();
                
                document.getElementById('editBtn').dataset.eventId = event.id;
                document.getElementById('deleteBtn').dataset.eventId = event.id;

                detailModal.classList.remove('hidden');
            }

            function closeDetailModal() {
                detailModal.classList.add('hidden');
            }

            // --- EVENT LISTENER ---
            jenisAgendaSelect.addEventListener('change', updateFormBasedOnJenisAgenda);
            addAgendaBtn.addEventListener('click', () => openAddModal());
            cancelBtn.addEventListener('click', closeModal);
            closeDetailBtn.addEventListener('click', closeDetailModal);
            agendaModal.querySelector('.modal-backdrop').addEventListener('click', closeModal);
            detailModal.querySelector('.modal-backdrop').addEventListener('click', closeDetailModal);
            confirmModal.querySelector('.modal-backdrop').addEventListener('click', () => confirmModal.classList.add('hidden'));

            agendaForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const eventId = document.getElementById('eventId').value;
                const createdBy = document.getElementById('createdBy').value;
                const status = document.getElementById('status').value;
                const jenisAgenda = document.getElementById('jenisAgenda').value;
                const colors = getColorForAdmin(createdBy, status);

                const newEventData = {
                    title: document.getElementById('perihal').value,
                    start: document.getElementById('waktuMulai').value,
                    end: document.getElementById('waktuSelesai').value,
                    extendedProps: {
                        jenisAgenda: jenisAgenda,
                        tempat: document.getElementById('tempat').value,
                        status: status,
                        createdBy: createdBy,
                        publishWebsite: jenisAgenda === 'Internal' ? document.getElementById('publishWebsite').checked : false,
                        asalSurat: jenisAgenda === 'Eksternal' ? document.getElementById('asalSurat').value : '',
                        pakaian: jenisAgenda === 'Eksternal' ? document.getElementById('pakaian').value : '',
                        disposisi: jenisAgenda === 'Eksternal' ? document.getElementById('disposisi').value : '',
                        petugas: jenisAgenda === 'Eksternal' ? document.getElementById('petugas').value : ''
                    },
                    backgroundColor: colors.backgroundColor,
                    borderColor: colors.borderColor,
                };

                if (eventId) {
                    const index = allAgendaData.findIndex(event => event.id === eventId);
                    if (index !== -1) {
                        allAgendaData[index] = { ...allAgendaData[index], ...newEventData };
                    }
                } else {
                    newEventData.id = Date.now().toString();
                    allAgendaData.push(newEventData);
                }
                
                filterEvents();
                closeModal();
            });
            
            document.getElementById('editBtn').addEventListener('click', function() {
                const eventId = this.dataset.eventId;
                const eventData = allAgendaData.find(e => e.id === eventId);
                if (!eventData) return;

                closeDetailModal();
                
                modalTitle.innerText = 'Edit Agenda';
                document.getElementById('eventId').value = eventData.id;
                
                jenisAgendaSelect.value = eventData.extendedProps.jenisAgenda;
                updateFormBasedOnJenisAgenda();

                document.getElementById('perihal').value = eventData.title;
                document.getElementById('waktuMulai').value = eventData.start.substring(0, 16);
                document.getElementById('waktuSelesai').value = eventData.end ? eventData.end.substring(0, 16) : '';
                document.getElementById('tempat').value = eventData.extendedProps.tempat;
                document.getElementById('status').value = eventData.extendedProps.status;
                document.getElementById('createdBy').value = eventData.extendedProps.createdBy;

                if (eventData.extendedProps.jenisAgenda === 'Eksternal') {
                    document.getElementById('asalSurat').value = eventData.extendedProps.asalSurat;
                    document.getElementById('pakaian').value = eventData.extendedProps.pakaian;
                    document.getElementById('disposisi').value = eventData.extendedProps.disposisi;
                    document.getElementById('petugas').value = eventData.extendedProps.petugas;
                } else { // Internal
                     document.getElementById('publishWebsite').checked = eventData.extendedProps.publishWebsite;
                }
                
                agendaModal.classList.remove('hidden');
            });

            document.getElementById('deleteBtn').addEventListener('click', function() {
                const eventId = this.dataset.eventId;
                confirmModal.classList.remove('hidden');
                document.getElementById('confirmDeleteBtn').dataset.eventId = eventId;
            });

            document.getElementById('confirmCancelBtn').addEventListener('click', () => {
                confirmModal.classList.add('hidden');
            });

            document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
                const eventId = this.dataset.eventId;
                allAgendaData = allAgendaData.filter(e => e.id !== eventId);
                filterEvents();
                closeDetailModal();
                confirmModal.classList.add('hidden');
});

            adminFilter.addEventListener('change', filterEvents);

            function filterEvents() {
                const selectedAdmin = adminFilter.value;
                let filteredEvents;

                if (selectedAdmin === 'all') {
                    filteredEvents = allAgendaData;
                } else {
                    filteredEvents = allAgendaData.filter(event => event.extendedProps.createdBy === selectedAdmin);
                }
                
                calendar.removeAllEvents();
                calendar.addEventSource(filteredEvents);
            }

            // --- FUNGSI BANTU ---
            function getColorForAdmin(createdBy, status) {
                if (status !== 'Terjadwal') {
                    return { backgroundColor: '#6b7280', borderColor: '#6b7280' }; // Abu-abu untuk Selesai/Dibatalkan
                }
                switch (createdBy) {
                    case 'Admin Dinas':         return { backgroundColor: '#ef4444', borderColor: '#ef4444' }; // red-500
                    case 'Admin Sekretariat':   return { backgroundColor: '#f97316', borderColor: '#f97316' }; // orange-500
                    case 'Admin Bidang Aptika': return { backgroundColor: '#22c55e', borderColor: '#22c55e' }; // green-500
                    case 'Admin Bidang Santis': return { backgroundColor: '#3b82f6', borderColor: '#3b82f6' }; // blue-500
                    case 'Admin Bidang IP':     return { backgroundColor: '#8b5cf6', borderColor: '#8b5cf6' }; // violet-500
                    case 'Admin Bidang KP':     return { backgroundColor: '#ec4899', borderColor: '#ec4899' }; // pink-500
                    default:                    return { backgroundColor: '#78716c', borderColor: '#78716c' }; // stone-500
                }
            }

            function formatDateRange(start, end) {
                const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', hour12: false };
                const startDate = new Date(start);
                if (!end) return startDate.toLocaleDateString('id-ID', options);
                const endDate = new Date(end);
                if (startDate.toDateString() === endDate.toDateString()) {
                    return `${startDate.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })} | ${startDate.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })} - ${endDate.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })}`;
                } else {
                    return `${startDate.toLocaleDateString('id-ID', options)} s/d ${endDate.toLocaleDateString('id-ID', options)}`;
                }
            }

            function getStatusColorClass(status) {
                switch(status) {
                    case 'Selesai': return 'bg-gray-100 text-gray-800';
                    case 'Dibatalkan': return 'bg-red-100 text-red-800';
                    case 'Terjadwal': default: return 'bg-yellow-100 text-yellow-800';
                }
            }
        });
    </script>
</body>
</html>
