                            <input type="checkbox" id="publishWebsite" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                            <label for="publishWebsite" class="ml-2 block text-sm text-gray-900">Publikasikan agenda ini di website dinas</label>
                        </div>
                    </div>
                    
                    <!-- Kolom Umum -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 border-t pt-4">
                        <!-- Status -->
                        <div>
                            <label for="status" class="block text-sm font-medium text-slate-700">Status</label>
